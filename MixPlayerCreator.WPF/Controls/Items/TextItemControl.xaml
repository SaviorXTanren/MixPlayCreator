<local:ItemControlBase x:Class="MixPlayerCreator.WPF.Controls.Items.TextItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixPlayerCreator.WPF.Controls.Items"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:ItemControlBase.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </local:ItemControlBase.Resources>

    <Border x:Name="Border" BorderBrush="{Binding SelectedBorderBrush}" BorderThickness="1">
        <TextBlock x:Name="TextBlock" Text="{Binding Text}" Foreground="{Binding Color}" FontSize="{Binding Size}" FontFamily="{Binding Font}" TextWrapping="Wrap" TextAlignment="Center" />
    </Border>
</local:ItemControlBase>
